@page "/admin/role/"
@model AdminModel


<h3>
    List role</h1>
    <partial name="_StatusMessage" model="@Model.StatusMessage" />

    <form method="POST" class="my-1 d-inline">
        <button class="btn btn-secondary" asp-page="./Add"
                asp-page-handler="StartNewRole">
            Add Role
        </button>
    </form>
    <a class="btn btn-secondary" asp-page="./User">Set Role for user</a>

    <table class="table">
        <tr>
            <th>Role ID</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach (var role in @Model.roles)
  {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <form method="POST" class="d-inline">
                    <button name="Input.ID" value="@role.Id" class="btn btn-success btn-sm"
                            asp-page="./Add" asp-page-handler="StartUpdate">
                       Update Role
                    </button>
                </form>
                <form method="POST" class="d-inline">
                    <button name="Input.ID" value="@role.Id" class="btn btn-success btn-sm"
                            asp-page="./Delete">
                        Xóa Role
                    </button>
                </form>
            </td>
        </tr>
  }
    </table>
